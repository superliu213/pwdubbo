<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pw.service.user.dao.impl.RoleDaoImpl">

	<sql id="table"> sys_role </sql>

	<resultMap id="beanMap" type="role">
		<id property="id" column="ID" />
		<result property="version" column="VERSION" />
		<result property="roleId" column="ROLE_ID" />
		<result property="roleDesc" column="ROLE_DESC" />
		<result property="remark" column="REMARK" />
	</resultMap>

	<insert id="insert" parameterType="role" keyProperty="id" useGeneratedKeys="true">
		insert into
		<include refid="table" />
		(VERSION, ROLE_ID, ROLE_DESC, REMARK)
		values (0, #{roleId}, #{roleDesc}, #{remark})
	</insert>

	<!-- 更新:version+1 实现乐观锁 -->
	<update id="update" parameterType="role">
		update
		<include refid="table" />
		<set>
			VERSION = #{version}+1 ,
			ROLE_ID = #{roleId},
			ROLE_DESC = #{roleDesc},
			REMARK = #{remark}
		</set>
		<where>
			ID = #{id} and VERSION = #{version}
		</where>
	</update>

	<sql id="condition_sql">
		<if test="roleId != null and roleId !='' "> and ROLE_ID = #{roleId}</if>
		<if test="roleDesc != null and roleDesc !='' "> and ROLE_DESC like CONCAT('%', #{roleDesc}, '%')</if>
	</sql>

	<select id="listBy" parameterType="java.util.Map" resultMap="beanMap">
		select * from
		<include refid="table" />
	</select>

	<select id="listPage" parameterType="java.util.Map" resultMap="beanMap">
		select * from
		<include refid="table" />
		<where>
			<include refid="condition_sql" />
		</where>
		<![CDATA[ order by ID desc]]>
	</select>

	<select id="getById" parameterType="long" resultMap="beanMap">
		select * from
		<include refid="table" />
		where ID = #{id}
	</select>

	<select id="deleteById" parameterType="long" resultType="int">
		delete from
		<include refid="table" />
		where ID = #{id}
	</select>

</mapper>